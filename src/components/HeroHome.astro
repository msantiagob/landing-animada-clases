---
import type { Link } from "../types";
import Button from "./Button.astro";

interface Props {
  title: string;
  subtitle?: string;
  cta?: Link;
  ctaModalPlan?: string;
  photo?: string;
  photoAlt?: string;
}

const {
  title,
  subtitle,
  cta,
  ctaModalPlan,
  photo,
  photoAlt = "Miguel Zuluaga",
} = Astro.props;
---

<div class="sy-hero-home">
  <div class="bg"></div>
  <div class="u-container container">
    <div class="inner">
      <div class="content">
        <h1 class="u-heading title" data-sy-reveal="words">{title}</h1>
        {
          subtitle ? (
            <p class="u-text subtitle" data-sy-reveal="lines">
              {subtitle}
            </p>
          ) : null
        }
        {cta ? <Button {...cta} arrow class="cta" modalPlan={ctaModalPlan} /> : null}
      </div>
      {
        photo ? (
          <div class="photo-section">
            <div data-gl-place class="gl-place" />
         
          </div>
        ) : (
          <div data-gl-place />
        )
      }
    </div>
  </div>
</div>

<style>
  .sy-hero-home {
    position: relative;
    overflow: hidden;
  }

  .bg {
    &:before,
    &:after {
      content: "";
      width: 100%;
      height: 100%;
      position: absolute;
      top: 0;
      left: 0;
    }

    &:before {
      background:
        radial-gradient(
          ellipse 80% 60% at 70% 40%,
          rgba(235, 14, 56, 0.08) 0%,
          transparent 60%
        ),
        radial-gradient(
          ellipse 60% 50% at 30% 60%,
          rgba(50, 170, 255, 0.22) 0%,
          transparent 55%
        ),
        radial-gradient(
          ellipse 100% 80% at 50% 0%,
          rgba(50, 170, 255, 0.12) 0%,
          transparent 50%
        );
      mask: linear-gradient(0deg, rgba(0, 0, 0, 0) 5%, rgba(0, 0, 0, 1) 100%);
    }

    &:after {
      backdrop-filter: blur(5px);
    }
  }

  .inner {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    padding: 9rem 0 10rem;
    position: relative;
    z-index: 9;
    min-height: 100vh;

    @media (--mq-tablet) {
      flex-direction: column;
      align-items: flex-start;
      gap: 4rem;
    }
  }

  .content {
    flex: 1;
    max-width: 30rem;

    @media (--mq-tablet) {
      max-width: 100%;
    }
  }

  .title {
    --fs: 4.5rem;
    --lh: 1;
    max-width: 10em;

    @media (--mq-phone) {
      --fs: 3rem;
    }
  }

  .subtitle {
    --fs: var(--font-size-lg);
    max-width: 28em;
    margin-top: 1.5rem;
    color: var(--color-text-alt);
  }

  .cta {
    margin-top: 2rem;
  }

  .photo-section {
    position: relative;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .gl-place {
    --d: 1;
    --s: 28rem;
    position: absolute;
    inset: 0;
    margin: auto;
    z-index: 1;

    @media (--mq-tablet) {
      --s: 22rem;
    }

    @media (--mq-phone) {
      --s: 18rem;
    }
  }

  .photo-inner {
    position: relative;
    z-index: 2;
    width: 22rem;
    height: 26rem;
    border-radius: 2rem;
    overflow: hidden;
    border: 1.5px solid rgba(235, 14, 56, 0.4);
    box-shadow:
      0 0 60px rgba(235, 14, 56, 0.2),
      0 0 120px rgba(50, 170, 255, 0.1),
      inset 0 0 30px rgba(0, 0, 0, 0.5);

    @media (--mq-tablet) {
      width: 18rem;
      height: 22rem;
    }

    @media (--mq-phone) {
      width: 14rem;
      height: 17rem;
    }

    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      object-position: center top;
    }
  }

  [data-gl-place]:not(.gl-place) {
    --d: 1;
    --s: 24rem;
    margin-top: -2rem;

    @media (--mq-desktop-lg) {
      --s: 22rem;
    }

    @media (--mq-tablet) {
      margin: 0;
      position: absolute;
      top: 100%;
      left: 0;
      margin: 0 auto;
      right: 0;
      width: 20rem;
      transform: translateY(-60%);
    }

    @media (--mq-tablet-sm) {
      --s: 20rem;
    }
  }
</style>

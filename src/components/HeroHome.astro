---
import type { Link } from "../types";
import Button from "./Button.astro";

interface Props {
  title: string;
  subtitle?: string;
  cta?: Link;
  ctaModalPlan?: string;
  whatsappUrl?: string;
  photo?: string;
  photoAlt?: string;
}

const {
  title,
  subtitle,
  cta,
  ctaModalPlan,
  whatsappUrl,
  photo,
  photoAlt = "Miguel Zuluaga",
} = Astro.props;
---

<div class="sy-hero-home">
  <div class="bg"></div>
  <div class="u-container container">
    <div class="inner">
      <div class="content">
        <h1 class="u-heading title" data-sy-reveal="words">{title}</h1>
        {
          subtitle ? (
            <p class="u-text subtitle" data-sy-reveal="lines">
              {subtitle}
            </p>
          ) : null
        }
        <div class="cta-group">
          {
            whatsappUrl ? (
              <a
                class="cta-wa u-text"
                href={whatsappUrl}
                target="_blank"
                rel="noopener noreferrer"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                  aria-hidden="true"
                >
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z" />
                </svg>
                Escr√≠beme por WhatsApp
              </a>
            ) : null
          }
          {
            cta ? (
              <Button {...cta} arrow class="cta" modalPlan={ctaModalPlan} />
            ) : null
          }
        </div>
      </div>
      {
        photo ? (
          <div class="photo-section">
            <div data-gl-place class="gl-place" />
          </div>
        ) : (
          <div data-gl-place />
        )
      }
    </div>
  </div>
</div>

<style>
  .sy-hero-home {
    position: relative;
    overflow: hidden;
  }

  .bg {
    &:before,
    &:after {
      content: "";
      width: 100%;
      height: 100%;
      position: absolute;
      top: 0;
      left: 0;
    }

    &:before {
      background:
        radial-gradient(
          ellipse 80% 60% at 70% 40%,
          rgba(235, 14, 56, 0.08) 0%,
          transparent 60%
        ),
        radial-gradient(
          ellipse 60% 50% at 30% 60%,
          rgba(50, 170, 255, 0.22) 0%,
          transparent 55%
        ),
        radial-gradient(
          ellipse 100% 80% at 50% 0%,
          rgba(50, 170, 255, 0.12) 0%,
          transparent 50%
        );
      mask: linear-gradient(0deg, rgba(0, 0, 0, 0) 5%, rgba(0, 0, 0, 1) 100%);
    }

    &:after {
      backdrop-filter: blur(5px);
    }
  }

  .inner {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    padding: 9rem 0 10rem;
    position: relative;
    z-index: 9;
    min-height: 100vh;

    @media (--mq-tablet) {
      flex-direction: column;
      align-items: flex-start;
      gap: 4rem;
    }
  }

  .content {
    flex: 1;
    max-width: 30rem;

    @media (--mq-tablet) {
      max-width: 100%;
    }
  }

  .title {
    --fs: 4.5rem;
    --lh: 1;
    max-width: 10em;

    @media (--mq-phone) {
      --fs: 3rem;
    }
  }

  .subtitle {
    --fs: var(--font-size-lg);
    max-width: 28em;
    margin-top: 1.5rem;
    color: var(--color-text-alt);
  }

  .cta-group {
    margin-top: 2rem;
    display: flex;
    align-items: center;
    gap: 1.25rem;
    flex-wrap: wrap;
  }

  .cta {
    margin-top: 0;
  }

  .cta-wa {
    --fs: var(--font-size-sm);
    display: flex;
    align-items: center;
    gap: 0.45em;
    color: #44c4ff;
    border: 1px solid rgba(68, 196, 255, 0.5);
    border-radius: 100px;
    padding: 0.75em 1.25em;
    text-decoration: none;
    font-weight: 500;
    transition: border-color 0.2s ease, color 0.2s ease;

    &:hover,
    &:focus {
      border-color: #44c4ff;
      color: #fff;
    }

    svg {
      width: 1.25em;
      height: 1.25em;
      flex-shrink: 0;
    }
  }

  .photo-section {
    position: relative;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .gl-place {
    --d: 1;
    --s: 28rem;
    position: absolute;
    inset: 0;
    margin: auto;
    z-index: 1;

    @media (--mq-tablet) {
      --s: 22rem;
    }

    @media (--mq-phone) {
      --s: 18rem;
    }
  }

  .photo-inner {
    position: relative;
    z-index: 2;
    width: 22rem;
    height: 26rem;
    border-radius: 2rem;
    overflow: hidden;
    border: 1.5px solid rgba(235, 14, 56, 0.4);
    box-shadow:
      0 0 60px rgba(235, 14, 56, 0.2),
      0 0 120px rgba(50, 170, 255, 0.1),
      inset 0 0 30px rgba(0, 0, 0, 0.5);

    @media (--mq-tablet) {
      width: 18rem;
      height: 22rem;
    }

    @media (--mq-phone) {
      width: 14rem;
      height: 17rem;
    }

    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      object-position: center top;
    }
  }

  [data-gl-place]:not(.gl-place) {
    --d: 1;
    --s: 24rem;
    margin-top: -2rem;

    @media (--mq-desktop-lg) {
      --s: 22rem;
    }

    @media (--mq-tablet) {
      margin: 0;
      position: absolute;
      top: 100%;
      left: 0;
      margin: 0 auto;
      right: 0;
      width: 20rem;
      transform: translateY(-60%);
    }

    @media (--mq-tablet-sm) {
      --s: 20rem;
    }
  }
</style>
